{% block collection_widget %}
{% spaceless %}
    {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype-name': prototype.vars.name}) %}
        {% endif %}
        {% set attr = attr|merge({'data-allow-add': allow_add ? 1 : 0}) %}
        {% set attr = attr|merge({'data-allow-remove': allow_delete ? 1 : 0 }) %}
        {% set attr = attr|merge({'data-name-prefix': full_name}) %}
 <div class="col-lg-12 ">
    <table class="table table-bordered table-hover table-condensed">
        <thead>
		<tr style="vertical-align: top;">
                    <th>Position</th>
                    <th>Nom</th>
                    <th>DÃ©sactiver</th>
		</tr>
	</thead>
        <tbody  class="table-entete my-selector-entete" data-prototype="<tr class='element'>
                        <td>{{ form_widget(prototype.position)|e('html_attr') }}</td>
			<td>{{ form_widget(prototype.nom)|e('html_attr') }}</td>
                        <td>{{ form_widget(prototype.isNotUsed)|e('html_attr') }}</td></tr>" 
                        {{ block('widget_container_attributes') }}>
            {{ form_errors(form) }}
            {% for entete in form %}
                <tr class="element">
                                <td>{{ form_widget(entete.position) }}</td>
				<td>{{ form_widget(entete.nom, {'attr' : {'readonly' : 'readonly'}})}}</td> 
                                <td>{{ form_widget(entete.isNotUsed) }}</td>
                </tr>                    
            {% endfor %}
        </tbody>
            {{ form_rest(form) }}
    </table>
 </div>
{% endspaceless %}
{% endblock collection_widget %}

{% extends "TelmaDashboardBundle::layout.html.twig" %}

{% block title %}
Index - {{ parent() }}
{% endblock %}


{% block telmadashboard_body %} 
<div class="row">
<div class="col-lg-6 col-md-6">
		  			<div class="content-box-large">
		  				<div class="panel-heading">
							<div class="panel-title">View table</div>
							
							<div class="panel-options">
								<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
								<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
							</div>
						</div>
		  				<div class="panel-body">
		  				<br />
		  					<form class="form-horizontal" method="get" action="{{ path('telma_dashboard_view') }}" >
		  						<div class="form-group">
									<label for="a" class="col-sm-2 control-label">Référence</label>
									<div class="col-sm-10">
										<select name="reference" id="a" class="form-control">
											{% for reference in arrayReferences %}
												<option value = {{ reference }}> {{ reference }} </option>
											{% endfor %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label for="b" class="col-sm-2 control-label">Région</label>
									<div class="col-sm-10">
										<select name="region" id="b" class="form-control">
											{% for region in arrayRegions %}
											<option value = {{ region }} > {{ region }} </option>
											{% endfor %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<button type="submit" value="View" class="btn btn-primary">View</button>
									</div>
								</div>
							</form>
							<br />
		  				</div>
		  			</div>
</div>
<div class="col-md-6">
	<div class="content-box-large">
		  				<div class="panel-heading">
							<div class="panel-title">Informations</div>
							
							<div class="panel-options">
								<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
								<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
							</div>
						</div>
		  				<div class="panel-body">
		  				Will be added soon ;) ...
		  				</div>
	</div>
</div>

<div class="col-md-12">
	<div class="content-box-large">
		  				<div class="panel-heading">
							<div class="panel-title">Control Panel</div>
							
							<div class="panel-options">
								<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
								<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
							</div>
						</div>
		  				<div class="panel-body">





		  				<div id="rootwizard">
								<div class="navbar">
								  <div class="navbar-inner">
								    <div class="container">
								<ul class="nav nav-pills">
								  	<li class="active"><a href="#tab1" data-toggle="tab">First</a></li>
									<li><a href="#tab2" data-toggle="tab">Second</a></li>
									<li><a href="#tab3" data-toggle="tab">Third</a></li>
								</ul>
								 </div>
								  </div>
								</div>
								<div class="tab-content">
								    <div class="tab-pane active" id="tab1"> 
									    {{ form_start(form, {'attr' : {'class': 'form'}}) }}
									    <div class="form-group">
									    	<div class="col-sm-2">
												{{ form_label(form.stm16, "STM16 : ") }}
											</div>
												{{ form_errors(form.stm16) }}
											<div class="col-sm-10">
												{{ form_widget(form.stm16) }}
												<br />
											</div>
										</div>

										<div class="form-group">
											<div class="col-sm-2">
												{{ form_label(form.stm4, "STM4 : ") }}
											</div>
												{{ form_errors(form.stm4) }}
											<div class="col-sm-10">
												{{ form_widget(form.stm4) }}
												<br />
											</div>
									    </div>

									    <div class="form-group">
										 	<div class="col-sm-2">
												{{ form_label(form.accuracy, "Accuracy") }}
											</div>
												{{ form_errors(form.accuracy) }}
											<div class="col-sm-10">
												{{ form_widget(form.accuracy, {'attr' : {'class' : 'range'}} ) }}
												<output></output>
												<br />
											</div>
									 	</div>
								    </div>

								    <div class="tab-pane" id="tab2">
								      <div class="form-group">
								     	{{ form_label(form.offresFixes, "Offres fixes :")}}
								     	{{ form_errors(form.offresFixes) }}
								     	{{ form_widget(form.offresFixes, {'attr' : {'rows' : 12}} ) }}
								     </div>
								    </div>

									<div class="tab-pane" id="tab3">
										<div class="form-group">
											{{ form_label(form.shapers, "Shapers :") }}
											{{ form_errors(form.shapers) }}
											{{ form_widget(form.shapers, {'attr' : {'rows' : 12 }} ) }}
										</div>
										<div>
											{{ form_rest(form) }}
										</div>
									</div>
										
									{{ form_end(form) }}
								    </div>
								</div>	
							</div>
						</div>

	</div>
</div>
</div>

{% endblock %}
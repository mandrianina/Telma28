{% extends "TelmaDashboardBundle::layout.html.twig" %}

{% block title %}
Regle edit - {{ parent() }}
{% endblock %}

{% block telmadashboard_body %}
<div class="row">
    <div class="col-md-8">
        <div class="content-box-large">
                <div class="panel-heading">
                        <div class="panel-title">Édition des règles</div>
                    <div class="panel-options">
                            <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                            <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                    </div>
                </div>


                <div class="panel-body">
                    <form method="POST" action="{{ path('telma_dashboard_addrules') }}">
                        <div class="form-group">
                            <label for="a" class="control-label">Nom de l'offre :</label>
                            <select name="nom" id="a" class="form-control nom">
                                <option value ="null"> Choose offers </option>
                                {% for nomOffre in arrayNomOffres %}
                                    <option value = {{ nomOffre }}> {{ nomOffre }} </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="b">Nom a afficher dans le fichier policy :</label>
                            <input type="text" name="alias" class="form-control alias" id="b" placeholder="aucun" />
                        </div>

                        <div class="form-group">
                            <label for="c">Règles</label>
                            <textarea name="contenu" class="form-control contenu" id="c" rows="5" placeholder="aucun contenu" >
                            </textarea>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>

                </div>
        </div>
    </div>
    <div class="col-md-4">
         <div class="content-box-large">
                <div class="panel-heading">
                        <div class="panel-title">Un peu d'aide ?</div>
                    <div class="panel-options">
                            <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                            <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                    </div>
                </div>


                <div class="panel-body">
                    L'aide se situera ici 

                </div>
        </div>
    </div>
</div>                         

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts  '@TelmaDashboardBundle/Resources/public/js/policyAjax.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
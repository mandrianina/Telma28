{% extends "TelmaDashboardBundle::layout.html.twig" %}

{% block title %}
Import - {{ parent ()}}
{% endblock %}


{% block telmadashboard_body %}

<div class="row">
			<div class="col-md-8">
				<div class="content-box-large">
		  		<div class="panel-heading">
					<div class="panel-title">Importation de fichier</div>
							
					<div class="panel-options">
						<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
						<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
					</div>
				</div>
		  		<div class="panel-body">							      
						{{ form_start(form, {'attr' : {'class': 'form'}}) }}
						<div class="form-group">
							<div class="col-sm-2">
								{{ form_label(form.referenceProduit, "Référence ") }}
							</div>
								{{ form_errors(form.referenceProduit) }}
							<div class="col-sm-10">
								{{ form_widget(form.referenceProduit) }}
								<br />
							</div>
									</div>

									<div class="form-group">
										<div class="col-sm-2">

											{{ form_label(form.regionProduit, "Région ") }}
										</div>
										{{ form_errors(form.regionProduit) }}
										<div class="col-sm-10">
											{{ form_widget(form.regionProduit) }}
										</div>
								    </div>
                                                                                <div class="spacer-2"></div>
								      <div class="form-group">
								     	{{ form_label(form.offresFixes, "Offres fixes à ajouter")}}
								     	{{ form_errors(form.offresFixes) }}
								     	{{ form_widget(form.offresFixes, {'attr' : {'rows' : 12}} ) }}
								     </div>

									 <div class="form-group">
									 	<div class="col-sm-2">
											{{ form_label(form.fichier, "Fichier à importer") }}
										</div>
										{{ form_errors(form.fichier) }}
										<div class="col-sm-10">
											{{ form_widget(form.fichier) }}
										</div>
									 </div>

									 <div class="form-group">
										<div class="col-sm-offset-2 col-sm-10">
										{{ form_rest(form, {'attr' : {'class' : 'btn btn-primary'}}) }}
										</div>
									</div>
										
									{{ form_end(form) }}
								</div>	
							</div>
		  				</div>
        <div class="col-md-4">
		<div class="content-box-large">
		  	<div class="panel-heading">
				<div class="panel-title">Un peu d'aide ?</div>
							
				<div class="panel-options">
					<a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
					<a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
				</div>
			</div>
		  	<div class="panel-body">
                                    Ici ce situera le guide d'utilisation
                        </div>			
	</div>      
</div>


{% endblock %}
